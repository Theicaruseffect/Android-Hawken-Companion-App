<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.hawkencompanionapp" >

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/login_activity_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/login_activity_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ForgotPasswordActvity"
            android:label="@string/forgot_password_activity_name"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".activities.UserAccountMainActivity"
            android:label="@string/user_area_activity_name"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/about_activity_name"
            android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>
